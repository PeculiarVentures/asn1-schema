{
  "name": "asn1-schema-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/mocha": "^8.2.3",
    "@types/node": "^16.4.0",
    "lerna": "^4.0.0",
    "mocha": "^9.0.2",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "test": "mocha",
    "build": "lerna run build",
    "rebuild": "lerna run rebuild",
    "clear": "lerna run --parallel clear",
    "create": "ts-node scripts/create_package.ts",
    "prepub": "yarn run build",
    "pub": "lerna publish",
    "bootstrap": "yarn",
    "bootstrap:upgrade": "yarn upgrade-interactive --latest",
    "upgrade": "yarn upgrade-interactive --latest"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  },
  "mocha": {
    "require": [
      "tsconfig-paths/register",
      "ts-node/register"
    ],
    "extension": [
      "ts"
    ],
    "spec": [
      "packages/*/test/**/*.ts"
    ]
  },
  "dependencies": {
    "@types/rimraf": "^3.0.1",
    "rimraf": "^3.0.2"
  },
  "resolutions": {
    "node-fetch": "^2.6.1"
  }
}
