{
  "name": "asn1-schema-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/mocha": "^8.0.0",
    "@types/node": "^13.11.1",
    "lerna": "^3.22.1",
    "mocha": "^8.0.1",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "test": "mocha",
    "build": "lerna run build",
    "rebuild": "lerna run rebuild",
    "clear": "lerna run --parallel clear",
    "create": "ts-node scripts/create_package.ts",
    "prepub": "npm run build",
    "pub": "lerna publish",
    "bootstrap": "yarn",
    "bootstrap:upgrade": "yarn upgrade-interactive --latest"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  },
  "mocha": {
    "require": [
      "tsconfig-paths/register",
      "ts-node/register"
    ],
    "extension": [
      "ts"
    ],
    "spec": [
      "packages/*/test/**/*.ts"
    ]
  }
}
