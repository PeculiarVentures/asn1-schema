{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@rollup/plugin-typescript": "^4.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.1",
    "lerna": "^3.20.2",
    "mocha": "^7.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.4.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@peculiar/asn1-cms": "file:packages/cms",
    "@peculiar/asn1-ocsp": "file:packages/ocsp",
    "@peculiar/asn1-schema": "file:packages/schema",
    "@peculiar/asn1-x509": "file:packages/x509",
    "@types/asn1js": "0.0.1",
    "asn1js": "^2.0.26",
    "tslib": "^1.11.1"
  },
  "scripts": {
    "test": "mocha",
    "build": "lerna run build",
    "rebuild": "lerna run rebuild",
    "clear": "lerna run clear",
    "create": "ts-node scripts/create_package.ts"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ]
  },
  "mocha": {
    "require": "ts-node/register",
    "extension": [
      "ts"
    ],
    "spec": [
      "packages/*/test/**/*.ts"
    ]
  }
}
